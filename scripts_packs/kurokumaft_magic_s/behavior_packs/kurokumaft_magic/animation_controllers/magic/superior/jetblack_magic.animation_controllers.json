{
  "format_version": "1.20.10",
  "animation_controllers": {
    "controller.animation.dark_magic.jetblack": {
      "states": {
        "default": {
          "transitions": [
            { "night_bit": "query.is_sneaking && query.get_equipped_item_name == 'jetblack_stick' && variable.attack_time" }
          ]
        },
        "night_bit": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§8ナイトビット\"}]}",
            "/function magic/dark/night_bit"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}