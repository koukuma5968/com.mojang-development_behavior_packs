{
  "format_version": "1.20.10",
  "animation_controllers": {
    "controller.animation.wind_magic.atmosphere": {
      "states": {
        "default": {
          "transitions": [
            { "aero_bit": "query.is_sneaking && query.get_equipped_item_name == 'atmosphere_stick' && variable.attack_time" }
          ]
        },
        "aero_bit": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§aエアロビット\"}]}",
            "/function magic/wind/aero_bit"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}