{
  "format_version": "1.20.10",
  "animation_controllers": {
    "controller.animation.light_magic.sparkle": {
      "states": {
        "default": {
          "transitions": [
            { "flash_bit": "query.is_sneaking && query.get_equipped_item_name == 'sparkle_stick' && variable.attack_time" }
          ]
        },
        "flash_bit": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§eフラッシュビット\"}]}",
            "/function magic/light/flash_bit"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}