{
  "format_version": "1.20.10",
  "animation_controllers": {
    "controller.animation.linght_magic.brightness": {
      "states": {
        "default": {
          "transitions": [
            { "protect": "query.is_sneaking && query.get_equipped_item_name == 'brightness_rod' && variable.attack_time" }
          ]
        },
        "protect": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§eプロテクト\"}]}",
            "/function magic/light/protect"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}