{
  "format_version": "1.20.10",
  "animation_controllers": {
    "controller.animation.armor.main_shield": {
      "states": {
        "default": {
          "transitions": [
            {"shield_guard":"query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:magic_shield') && query.blocking"}
          ]
        },
        "shield_guard":{
          "on_entry": [
            "/tag @s add main_shield_guard"
          ],
          "on_exit": [
            "/tag @s remove main_shield_guard"
          ],
          "transitions": [
            {"default":"!query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:magic_shield') || !query.blocking"}
          ]
        }
      }
    },
    "controller.animation.armor.off_shield": {
      "states": {
        "default": {
          "transitions": [
            {"shield_guard":"query.equipped_item_any_tag('slot.weapon.offhand','kurokumaft:magic_shield') && query.blocking"}
          ]
        },
        "shield_guard":{
          "on_entry": [
            "/tag @s add off_shield_guard"
          ],
          "on_exit": [
            "/tag @s remove off_shield_guard"
          ],
          "transitions": [
            {"default":"!query.equipped_item_any_tag('slot.weapon.offhand','kurokumaft:magic_shield') || !query.blocking"}
          ]
        }
      }
    }
  }
}