        "intervals": [10, 20]
      },
      "branches": {
        "branch_length": 6,
        "branch_slope": 2,
        "branch_interval": {
          "range_min": 2,
          "range_max": 5
        },
        "branch_altitude_factor": {
          "min": 0.8,
          "max": 1.0
        },
        "branch_canopy": {
          "mega_canopy": {
            "leaf_block": "kurokumaft:water_leaves",
            "canopy_height": {
              "range_min": 1,
              "range_max": 4
            },
            "base_radius": 4
          }
        }     
      }
    },
    "mega_canopy": {
      "leaf_block": "kurokumaft:water_leaves",
      "canopy_height": {
        "range_min": 4,
        "range_max": 6
      },
      "base_radius": 6
    }
  }
}