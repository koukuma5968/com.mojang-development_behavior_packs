{
  "format_version": "1.20.10",
  "minecraft:tree_feature": {
    "description": {
      "identifier": "kurokumaft:water_tree_feature"
    },
    "base_block": [
      "minecraft:sand",
      "minecraft:gravel"
    ],
    "may_grow_on": [
      "minecraft:sand",
      "minecraft:gravel"
    ],
    "may_replace": [
      "minecraft:seagrass",
      "minecraft:kelp",
      "minecraft:water",
      "minecraft:air"
     ],
    "may_grow_through": [
      "minecraft:sand",
      "minecraft:dirt",
      "minecraft:gravel",
      {
        "name": "minecraft:dirt",
        "states": {
          "dirt_type": "coarse"
        }
      }
    ],
    "mega_trunk": {
      "trunk_block": {
        "name": "kurokumaft:water_log"
      },
      "trunk_width": 2,
      "trunk_height": {
