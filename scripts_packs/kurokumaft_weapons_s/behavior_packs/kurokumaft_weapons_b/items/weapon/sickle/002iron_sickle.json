      },
      "minecraft:use_animation": "bow",
      "minecraft:max_stack_size": 1,
      "minecraft:icon": {
        "texture": "iron_sickle"
      },
      "minecraft:display_name": {
        "value": "item.kurokumaft:iron_sickle.name"
      }
    },
    "events": {
      "kurokumaft:iron_sickle": {
        "sequence":[
          {
            "run_command": {
              "command": [
                "tag @s add i_sickle_t"
              ],
              "target": "target"
            }
          },
          {
            "run_command": {
              "command": [
                "tag @s add i_sickle_s",
                "particle kurokumaft:slash_particle ^ ^1 ^2.4",
                "execute at @e[tag=i_sickle_t] run damage @s 3 entity_attack entity @e[tag=i_sickle_s]",
