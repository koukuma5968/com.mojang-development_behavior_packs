{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "kurokumaft:fox_helmet_orange",
      "item": { "kurokumaft:fox_helmet_orange": "query.owner_identifier == 'minecraft:player'" },
      "materials": {
        "default": "armor",
        "enchanted": "armor_enchanted"
      },
      "textures": {
        "default": "textures/kurokumaft/models/armor/fox_helmet_orange",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.fox_helmet"
      },
      "scripts": {
        "parent_setup": "variable.helmet_layer_visible = 0.0;",
        "animate": [
          {"move": "query.is_moving"}
        ]
      },
      "animations": {
        "move": "animation.fox_helmet.move"
      },
      "render_controllers": [ "controller.render.animal_armor.fox" ]
    }
  }
}
