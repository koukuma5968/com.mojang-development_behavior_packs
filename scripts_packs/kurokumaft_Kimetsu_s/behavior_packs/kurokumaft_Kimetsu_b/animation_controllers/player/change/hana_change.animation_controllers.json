{
  "format_version": "1.21.10",
  "animation_controllers": {
    "controller.animation.kokyu.hana_change": {
      "states": {
        "default": {
          "transitions": [
            { "hana2": "query.skin_id == 34 && query.variant == 7 && query.is_sneaking" },
            { "hana4": "query.skin_id == 34 && query.variant == 2 && query.is_sneaking" },
            { "hana5": "query.skin_id == 34 && query.variant == 4 && query.is_sneaking" },
            { "hana6": "query.skin_id == 34 && query.variant == 5 && query.is_sneaking" },
            { "hana7": "query.skin_id == 34 && query.variant == 6 && query.is_sneaking" }
          ]
        },
        "hana2":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 弐ノ型\"}]}",
            "/event entity @s variant2"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hana4":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 肆ノ型\"}]}",
            "/event entity @s variant4"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hana5":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 伍ノ型\"}]}",
            "/event entity @s variant5"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hana6":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 陸ノ型\"}]}",
            "/event entity @s variant6"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hana7":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 終ノ型\"}]}",
            "/event entity @s variant7"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        }
      }
    }
  }
}