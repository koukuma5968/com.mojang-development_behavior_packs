{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.mushi.attack" : {
			"initial_state" : "default",
			"states" : {
				"default":{
					"transitions" : [
						{"attack": "variable.attack_time"}
					]
				},
				"attack" : {
					"animations" : [
						{"mushi_attack": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.any_animation_finished"}
					]
				}
			}
		},
		"controller.animation.mushi.kokyu" : {
			"initial_state" : "default",
			"states" : {
				"default":{
					"transitions" : [
						{"mushi1": "variable.equipped_mushi && query.variant == 1"},
						{"mushi2": "variable.equipped_mushi && query.variant == 2"},
						{"mushi3": "variable.equipped_mushi && query.variant == 3"},
						{"mushi4": "variable.equipped_mushi && query.variant == 4"}
					]
				},
				"mushi1" : {
					"animations" : [
						{"mushi.chou": "variable.is_first_person"},
						{"mushi.chou": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.mark_variant == 0"}
					]
				},
				"mushi2" : {
					"animations" : [
						{"mushi.houga": "variable.is_first_person"},
						{"mushi.houga": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.mark_variant == 0"}
					]
				},
				"mushi3" : {
					"animations" : [
						{"mushi.seirei": "variable.is_first_person"},
						{"mushi.seirei": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.mark_variant == 0"}
					]
				},
				"mushi4" : {
					"animations" : [
						{"mushi.gokou": "variable.is_first_person"},
						{"mushi.gokou": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.mark_variant == 0"}
					]
				}
			}
		}
    }
}