{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.tengen.kokyu" : {
			"initial_state" : "default",
			"states" : {
				"default":{
					"transitions" : [
						{"tengen1_1": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_tengen') && query.variant == 1 && query.is_using_item"},
						{"tengen4_1": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_tengen') && query.variant == 4 && query.is_using_item"},
						{"tengen5_1": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_tengen') && query.variant == 5 && query.is_using_item"}
					]
				},
				"tengen1_1" : {
					"animations" : [
						{"tengen.ichi_1": "variable.is_first_person"},
						{"tengen.ichi_1": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				},
				"tengen4_1" : {
					"animations" : [
						{"tengen.shi_1": "variable.is_first_person"},
						{"tengen.shi_1": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				},
				"tengen5_1" : {
					"animations" : [
						{"tengen.go_1": "variable.is_first_person"},
						{"tengen.go_1": "!variable.is_first_person"}
					],
					"transitions" : [
						{"tengen5_2":"query.any_animation_finished"}
					]
				},
				"tengen5_2" : {
					"animations" : [
						{"tengen.go_2": "variable.is_first_person"},
						{"tengen.go_2": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				}
			}
		}
    }
}