{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.shinobu.kokyu" : {
			"initial_state" : "default",
			"states" : {
				"default":{
					"transitions" : [
						{"shinobu1": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_shinobu') && query.variant == 1 && query.is_using_item"},
						{"shinobu2": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_shinobu') && query.variant == 2 && query.is_using_item"},
						{"shinobu3": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_shinobu') && query.variant == 3 && query.is_using_item"}
					]
				},
				"shinobu1" : {
					"animations" : [
						{"shinobu.chou": "variable.is_first_person"},
						{"shinobu.chou": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				},
				"shinobu2" : {
					"animations" : [
						{"shinobu.houga": "variable.is_first_person"},
						{"shinobu.houga": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				},
				"shinobu3" : {
					"animations" : [
						{"shinobu.seirei": "variable.is_first_person"},
						{"shinobu.seirei": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				}
			}
		}
    }
}