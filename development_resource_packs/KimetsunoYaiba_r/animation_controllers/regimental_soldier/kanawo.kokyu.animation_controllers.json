{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.kanawo.kokyu" : {
			"initial_state" : "default",
			"states" : {
				"default":{
					"transitions" : [
						{"kanawo2": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.variant == 2 && query.is_using_item"},
						{"kanawo4": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.variant == 4 && query.is_using_item"},
						{"kanawo5": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.variant == 5 && query.is_using_item"},
						{"kanawo6": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.variant == 6 && query.is_using_item"}
					]
				},
				"kanawo2" : {
					"animations" : [
						{"kanawo.ni_1": "variable.is_first_person"},
						{"kanawo.ni_1": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				},
				"kanawo4" : {
					"animations" : [
						{"kanawo.shi_1": "variable.is_first_person"},
						{"kanawo.shi_1": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				},
				"kanawo5" : {
					"animations" : [
						{"kanawo.go_1": "variable.is_first_person"},
						{"kanawo.go_1": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				},
				"kanawo6" : {
					"animations" : [
						{"kanawo.roku_1": "variable.is_first_person"},
						{"kanawo.roku_1": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.variant == 0"}
					]
				}
			}
		}
    }
}