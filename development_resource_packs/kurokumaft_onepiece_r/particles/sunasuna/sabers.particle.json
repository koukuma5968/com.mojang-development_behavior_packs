{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "kurokumaft:sabers",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/particles"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 300,
				"max_particles": 500
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_disc": {
				"offset": [0, -1, 0],
				"radius": 0.5,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_initialization": {
				"per_render_expression": "variable.size = 0.75 * math.pow(1.0-(variable.particle_age / variable.particle_lifetime), 0.08);"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1
			},
			"minecraft:particle_initial_speed": "variable.particle_random_1*1.5",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 20, 0]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.5 + variable.particle_random_1*0.1) - (0.1 * variable.particle_age)", "(0.2 + variable.particle_random_1*0.1) - (0.1 * variable.particle_age)"],
				"facing_camera_mode": "lookat_xyz",
				"uv": {
					"texture_width": 128,
					"texture_height": 128,
					"uv": [25, 0],
					"uv_size": [7, 7]
				}
			},
			"minecraft:particle_motion_collision": {
				"enabled": "variable.particle_age > 1",
				"collision_radius": 0.25
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.76": "#FF956D04",
						"2.0": "#ff000000"
					}
				}
			}
		}
	}
}