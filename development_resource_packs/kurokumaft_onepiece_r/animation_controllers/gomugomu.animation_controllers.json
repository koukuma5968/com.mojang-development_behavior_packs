{
	"format_version" : "1.10.0",
	"animation_controllers" : {
		"controller.animation.gomugomu.player" : {
			"initial_state" : "default",
			"states" : {
				"default":{
					"transitions" : [
						{"pistol": "variable.gomugomu && query.variant == 1 && query.mark_variant == 1 && query.is_using_item"}
					]
				},
				"pistol" : {
					"animations" : [
						{"gomugomu_pistol": "variable.is_first_person"},
						{"gomugomu_pistol": "!variable.is_first_person"}
					],
					"transitions" : [
						{"pistol_attack":"!query.mark_variant == 2"}
					]
				},
				"pistol_attack" : {
					"animations" : [
						{"gomugomu_pistol_attack": "variable.is_first_person"},
						{"gomugomu_pistol_attack": "!variable.is_first_person"}
					],
					"transitions" : [
						{"default":"query.any_animation_finished"}
					]
				}
			}
		}
    }
}