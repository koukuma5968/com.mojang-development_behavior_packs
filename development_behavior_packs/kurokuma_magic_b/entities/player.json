{
  "format_version": "1.17.10",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:player",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false,
      "scripts":{
        "animate":[
          "fire","fire_change",
          "water","water_change",
          "lightning","lightning_change",
          "light","light_change",
          "dark","dark_change",
          "stone","stone_change",
          "snow","snow_change",
          "wind","wind_change"
        ]
      },
      "animations":{
        "fire":"controller.animation.fire_magic.fire","fire_change": "controller.animation.fire_magic.fire_change",
        "water":"controller.animation.water_magic.water","water_change": "controller.animation.water_magic.water_change",
        "lightning":"controller.animation.lightning_magic.lightning","lightning_change": "controller.animation.lightning_magic.lightning_change",
        "light":"controller.animation.light_magic.light","light_change": "controller.animation.light_magic.light_change",
        "dark":"controller.animation.dark_magic.dark","dark_change": "controller.animation.dark_magic.dark_change",
        "stone":"controller.animation.stone_magic.stone","stone_change": "controller.animation.stone_magic.stone_change",
        "snow":"controller.animation.snow_magic.snow","snow_change": "controller.animation.snow_magic.snow_change",
        "wind":"controller.animation.wind_magic.wind","wind_change": "controller.animation.wind_magic.wind_change"
      }
    },

    "component_groups": {
      "minecraft:add_bad_omen": {
        "minecraft:spell_effects": {
          "add_effects": [
            {
              "effect": "bad_omen",
              "duration": 6000,
              "visible": false,
              "display_on_screen_animation": true
            }
          ]
        },
        "minecraft:timer": {
          "time": [ 0.0, 0.0 ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:clear_add_bad_omen",
            "target": "self"
          }
        }
      },
      "minecraft:clear_bad_omen_spell_effect": {
        "minecraft:spell_effects": {
        }
      },
      "minecraft:raid_trigger": {
        "minecraft:raid_trigger": {
          "triggered_event": {
            "event": "minecraft:remove_raid_trigger",
            "target": "self"
          }
        },
        "minecraft:spell_effects": {
          "remove_effects": "bad_omen"
        }
      }
    },

    "components": {
      "minecraft:experience_reward": {
        "on_death": "Math.Min(query.player_level * 7, 100)"
      },
      "minecraft:type_family": {
        "family": [ "player" ]
      },
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:loot": {
        "table": "loot_tables/empty.json"
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
      "minecraft:can_climb": {
      },
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { 
              "all_of": [
                {"test": "has_equipment","domain": "torso","operator": "==","subject": "self","value": "kurokumaft:fire_magic_chestplate"},
                {"test": "in_lava", "subject": "self", "operator": "==", "value": true}
              ]
            },
            "cause": "lava",
            "damage_per_tick": 0
          },
          {
            "filters": { 
              "all_of": [
                {"test": "has_equipment","domain": "torso","operator": "!=","subject": "self","value": "kurokumaft:fire_magic_chestplate"},
                {"test": "in_lava", "subject": "self", "operator": "==", "value": true}
              ]
            },
            "cause": "lava",
            "damage_per_tick": 4
          }

        ]
      },
      "minecraft:attack": {
        "damage": 1
      },
      "minecraft:player.saturation": {
        "value": 20
      },
      "minecraft:player.exhaustion": {
        "value": 0,
        "max": 4
      },
      "minecraft:player.level": {
        "value": 0,
        "max": 24791
      },
      "minecraft:player.experience": {
        "value": 0,
        "max": 1
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": -1,
        "inhale_time": 3.75,
        "generates_bubbles": false
      },
      "minecraft:nameable": {
        "always_show": true,
        "allow_name_tag_renaming": false
      },
      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:insomnia": {
        "days_until_insomnia": 3
      },
      "minecraft:rideable": {
        "seat_count": 2,
        "family_types": [
          "parrot_tame"
        ],
        "pull_in_entities": true,
        "seats": [
          {
            "position": [ 0.4, -0.2, -0.1 ],
            "min_rider_count": 0,
            "max_rider_count": 0,
            "lock_rider_rotation": 0
          },
          {
            "position": [ -0.4, -0.2, -0.1 ],
            "min_rider_count": 1,
            "max_rider_count": 2,
            "lock_rider_rotation": 0
          }
        ]
      },
      "minecraft:conditional_bandwidth_optimization": {
      },
      "minecraft:block_climber": {},
      "minecraft:environment_sensor": {
        "triggers": [
          {
            "filters": {
              "all_of": [
                {"test": "has_mob_effect","subject": "self","value": "bad_omen"},
                {"test": "is_in_village","subject": "self","value": true}
              ]
            },
            "event": "minecraft:trigger_raid"
          },

          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "head","operator": "==","subject": "self","value": "kurokumaft:ice_magic_helmet"}
              ]
            },
            "event": "kurokumaft:water_breathing_effect"
          },
          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "torso","operator": "==","subject": "self","value": "kurokumaft:ice_magic_chestplate"}
              ]
            },
            "event": "kurokumaft:lava_freeze"
          },
          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "leg","operator": "==","subject": "self","value": "kurokumaft:ice_magic_leggings"}
              ]
            },
            "event": "kurokumaft:fire_resistance"
          },
          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "feet","operator": "==","subject": "self","value": "kurokumaft:ice_magic_boots"}
              ]
            },
            "event": "kurokumaft:ice_walker"
          },


          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "head","operator": "==","subject": "self","value": "kurokumaft:fire_magic_helmet"}
              ]
            },
            "event": "kurokumaft:fire_protection"
          },
          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "torso","operator": "==","subject": "self","value": "kurokumaft:fire_magic_chestplate"}
              ]
              },
              "event": "kurokumaft:snow_defrosting"
          },
          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "leg","operator": "==","subject": "self","value": "kurokumaft:fire_magic_leggings"}
              ]
            },
            "event": "kurokumaft:fire_strength"
          },
          {
            "filters": {
              "all_of": [
                {"test": "has_equipment","domain": "feet","operator": "==","subject": "self","value": "kurokumaft:fire_magic_boots"}
              ]
            },
            "event": "kurokumaft:lava_walker"
          }
        ]
      }
    },

    "events": {
      "minecraft:gain_bad_omen": {
        "add": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        }
      },
      "minecraft:clear_add_bad_omen": {
        "remove": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:clear_bad_omen_spell_effect"
          ]
        }
      },
      "minecraft:trigger_raid": {
        "add": {
          "component_groups": [ "minecraft:raid_trigger" ]
        }
      },
      "minecraft:remove_raid_trigger": {
        "remove": {
          "component_groups": [ "minecraft:raid_trigger" ]
        }
      },

      // 氷の装備
      "kurokumaft:water_breathing_effect": {
				"run_command": {
					"command": [
					  "effect @s water_breathing 1 10 true"
					]
				}
			},
			"kurokumaft:lava_freeze": {
				"run_command": {
					"command": [
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^1^1^ lava -1 setblock ^1^1^ ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^-1^1^ lava -1 setblock ^-1^1^ ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^1 lava -1 setblock ^^1^1 ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^-1 lava -1 setblock ^^1^-1 ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^-1 lava -1 setblock ^^1^-1 ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^-1^2^ lava -1 setblock ^-1^2^ ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^2^1 lava -1 setblock ^^2^1 ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^2^-1 lava -1 setblock ^^2^-1 ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^3^ lava -1 setblock ^^3^ ice"
          ]
				}
			},
			"kurokumaft:fire_resistance": {
				"run_command": {
					"command": [
					  "effect @s fire_resistance 1 5 true"
					]
				}
			},
			"kurokumaft:ice_walker": {
				"run_command": {
					"command": [
					  "execute @e[type=player,r=1,c=1] ~~~ detect ~~-1~ water -1 setblock ~~-1~ packed_ice",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ~~-1~ flowing_water -1 setblock ~~-1~ packed_ice"
          ]
				}
			},

      // 炎の装備
      "kurokumaft:fire_protection": {
				"run_command": {
					"command": [
					  "effect @s fire_resistance 1 5 true"
					]
				}
			},
      "kurokumaft:snow_defrosting": {
				"run_command": {
					"command": [
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^1^1^ snow -1 setblock ^1^1^ water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^-1^1^ snow -1 setblock ^-1^1^ water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^1 snow -1 setblock ^^1^1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^-1 snow -1 setblock ^^1^-1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^-1 snow -1 setblock ^^1^-1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^-1^2^ snow -1 setblock ^-1^2^ water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^2^1 snow -1 setblock ^^2^1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^2^-1 snow -1 setblock ^^2^-1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^3^ snow -1 setblock ^^3^ water",

            "execute @e[type=player,r=1,c=1] ~~~ detect ^1^1^ powder_snow -1 setblock ^1^1^ water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^-1^1^ powder_snow -1 setblock ^-1^1^ water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^1 powder_snow -1 setblock ^^1^1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^-1 powder_snow -1 setblock ^^1^-1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^1^-1 powder_snow -1 setblock ^^1^-1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^-1^2^ powder_snow -1 setblock ^-1^2^ water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^2^1 powder_snow -1 setblock ^^2^1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^2^-1 powder_snow -1 setblock ^^2^-1 water",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ^^3^ powder_snow -1 setblock ^^3^ water"
          ]
				}
			},
			"kurokumaft:fire_strength": {
				"run_command": {
					"command": [
					  "effect @s strength 1 10 true"
					]
				}
			},
			"kurokumaft:lava_walker": {
				"run_command": {
					"command": [
					  "execute @e[type=player,r=1,c=1] ~~~ detect ~~-1~ lava -1 setblock ~~-1~ magma",
					  "execute @e[type=player,r=1,c=1] ~~~ detect ~~-1~ flowing_lava -1 setblock ~~-1~ magma"
          ]
				}
			}
    }
  }
}




