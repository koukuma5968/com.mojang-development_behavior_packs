{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.armor.wind_magic_chestplate": {
      "states": {
        "default": {
          "transitions": [
            { "wind_chest_slow_falling": "query.is_item_name_any('slot.armor.chest','kurokumaft:wind_magic_chestplate') && !query.is_jumping" },
            { "wind_chest_levitation": "query.is_item_name_any('slot.armor.chest','kurokumaft:wind_magic_chestplate') && query.is_jumping" }
          ]
        },
        "wind_chest_slow_falling":{
          "on_entry": [
            "/effect @s slow_falling 10 20 true"
          ],
          "transitions": [
            {"default":"(1.0)"}
          ]
        },
        "wind_chest_levitation":{
          "on_entry": [
            "/effect @s levitation 10 10 true"
          ],
          "on_exit": [
            "/effect @s levitation 0"
          ],
          "transitions": [
            {"wind_chest_slow_falling":"variable.wind_chest = (variable.wind_chest ?? 0);variable.wind_chest = variable.wind_chest < 30 ? variable.wind_chest + 1:0;return variable.wind_chest == 0;"}
          ]
        }
      }
    }
  }
}