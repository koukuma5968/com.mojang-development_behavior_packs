{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.snow_magic.snow_change": {
      "states": {
        "default": {
          "transitions": [
            { "change": "query.get_equipped_item_name == 'snow_wand'" }
          ]
        },
        "change": {
          "on_entry": [
            "/tag @s add snow_wand"
          ],
          "on_exit": [
            "/tag @s remove snow_wand"
          ],
          "transitions": [
            {"default":"query.get_equipped_item_name != 'snow_wand'"}
          ]
        }
      }
    },
    "controller.animation.snow_magic.snow": {
      "states": {
        "default": {
          "transitions": [
            { "icewall": "query.is_sneaking && query.get_equipped_item_name == 'snow_wand' && variable.attack_time" },
            { "powdered_snow": "!query.is_sneaking && query.get_equipped_item_name == 'snow_wand' && variable.attack_time" }
          ]
        },
        "icewall": {
          "on_entry": [
            "/function magic/ice/icewall"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "powdered_snow": {
          "on_entry": [
            "/function magic/ice/powdered_snow"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}