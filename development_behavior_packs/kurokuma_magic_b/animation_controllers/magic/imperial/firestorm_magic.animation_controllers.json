{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.firestorm_magic.firestorm_change": {
      "states": {
        "default": {
          "transitions": [
            { "change": "query.get_equipped_item_name == 'firestorm_staff'" }
          ]
        },
        "change": {
          "on_entry": [
            "/tag @s add firestorm_staff"
          ],
          "on_exit": [
            "/tag @s remove firestorm_staff"
          ],
          "transitions": [
            {"default":"query.get_equipped_item_name != 'firestorm_staff'"}
          ]
        }
      }
    },
    "controller.animation.firestorm_magic.firestorm": {
      "states": {
        "default": {
          "transitions": [
            { "flame_shock": "!query.is_sneaking && query.get_equipped_item_name == 'firestorm_staff' && variable.attack_time" },
            { "firestorm": "!query.is_sneaking && query.get_equipped_item_name == 'firestorm_staff' && query.is_using_item" }
          ]
        },
        "flame_shock": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§cフレイムショック\"}]}",
            "/function magic/fire/flame_shock"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "firestorm": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§cファイアストーム\"}]}"
          ],
          "transitions": [
            {"default":"(1.0)"}
          ]
        }
      }
    }
  }
}