{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.water_magic.water_change": {
      "states": {
        "default": {
          "transitions": [
            { "change": "query.get_equipped_item_name == 'water_wand'" }
          ]
        },
        "change": {
          "on_entry": [
            "/tag @s add water_wand"
          ],
          "on_exit": [
            "/tag @s remove water_wand"
          ],
          "transitions": [
            {"default":"query.get_equipped_item_name != 'water_wand'"}
          ]
        }
      }
    },
    "controller.animation.water_magic.water": {
      "states": {
        "default": {
          "transitions": [
            { "waterwall": "query.is_sneaking && query.get_equipped_item_name == 'water_wand' && variable.attack_time" },
            { "splash": "!query.is_sneaking && query.get_equipped_item_name == 'water_wand' && variable.attack_time" }
          ]
        },
        "waterwall": {
          "on_entry": [
            "/function magic/water/waterwall"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "splash": {
          "on_entry": [
            "/function magic/water/splash"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}