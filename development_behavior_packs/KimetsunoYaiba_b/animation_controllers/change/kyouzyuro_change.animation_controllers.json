{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.kyouzyuro_change": {
      "states": {
        "default": {
          "transitions": [
            { "kyouzyuro1": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kyouzyuro') && query.scoreboard('kyouzyuro') == 9 && query.is_sneaking" },
            { "kyouzyuro2": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kyouzyuro') && query.scoreboard('kyouzyuro') == 1 && query.is_sneaking" },
