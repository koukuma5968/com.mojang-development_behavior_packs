{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.zenitu_change": {
      "states": {
        "default": {
          "transitions": [
            { "zenitu1": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_zenitu') && query.scoreboard('zenitu') == 7 && query.is_sneaking" },
            { "zenitu7": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_zenitu') && query.scoreboard('zenitu') == 1 && query.is_sneaking" }
          ]
        },
        "zenitu1":{
          "on_entry": [
            "/tellraw @s {\"rawtext\":[{\"text\":\"§6雷の呼吸 壱ノ型\"}]}",
            "/scoreboard players set @s zenitu 1"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "zenitu7":{
          "on_entry": [
            "/tellraw @s {\"rawtext\":[{\"text\":\"§6雷の呼吸 漆ノ型\"}]}",
            "/scoreboard players set @s zenitu 7"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        }
      }
    }
  }
}