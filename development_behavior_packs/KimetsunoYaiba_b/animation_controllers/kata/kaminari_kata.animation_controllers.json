{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.kaminari": {
      "states": {
        "default": {
          "variables": {
            "kokyu_kaminari_attack": {
              "input": "variable.kokyu_kaminari_attack = (variable.kokyu_kaminari_attack ?? 0);"
            }
          },
          "transitions": [
            { "kaminari1_zenitu": "query.scoreboard('zenitu') == 1 && query.is_using_item" },
            { "kaminari1": "query.scoreboard('kaminari') == 1 && query.is_using_item" },
            { "kaminari2": "query.scoreboard('kaminari') == 2 && query.is_using_item" },
            { "kaminari3": "query.scoreboard('kaminari') == 3 && query.is_using_item" },
            { "kaminari4": "query.scoreboard('kaminari') == 4 && query.is_using_item" },
            { "kaminari5": "query.scoreboard('kaminari') == 5 && query.is_using_item" },
            { "kaminari6": "query.scoreboard('kaminari') == 6 && query.is_using_item" },
            { "kaminari7": "query.scoreboard('zenitu') == 7 && query.is_using_item" }
          ]
        },
        "kaminari1_zenitu":{
          "on_entry": [
            "/event entity @s variant1"
          ],
          "transitions": [
            {"kaminari1_zenitu2":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 10 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0;"}
          ]
        },
        "kaminari1_zenitu2":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6霹靂一閃\"}]}",
            "/effect @s speed 99999 5 true",
            "/scoreboard objectives add kaminari1 dummy",
            "/scoreboard players set @s kaminari1 0"
          ],
          "on_exit": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6\"},{\"score\":{\"name\":\"@s\",\"objective\":\"kaminari1\"}},{\"text\":\"連\"}]}",
            "/effect @s speed 0",
            "/scoreboard players reset @s kaminari1",
            "/scoreboard objectives remove kaminari1"
          ],
          "transitions": [
            {"kaminari1_f":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 200 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0;"}
          ]
        },
        "kaminari1":{
          "on_entry": [
            "/event entity @s variant1"
          ],
          "transitions": [
            {"kaminari1_2":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 10 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0;"}
          ]
        },
        "kaminari1_2":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6霹靂一閃\"}]}",
            "/effect @s speed 99999 5 true",
            "/scoreboard objectives add kaminari1 dummy",
            "/scoreboard players set @s kaminari1 0"
          ],
          "on_exit": [
            "/effect @s speed 0",
            "/scoreboard players reset @s kaminari1",
            "/scoreboard objectives remove kaminari1"
          ],
          "transitions": [
            {"kaminari1_f":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 200 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0 || query.scoreboard('kaminari1') == 1;"}
          ]
        },
        "kaminari1_f":{
          "on_exit": [
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 40 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0 && !variable.attack_time;"}
          ]
        },
        "kaminari2":{
          "on_entry": [
            "/event entity @s variant2",
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6稲魂\"}]}",
            "/function kaminari/kaminari2"
          ],
          "on_exit": [
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 10 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0 && !query.is_using_item;"}
          ]
        },
        "kaminari3":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6聚蚊成雷\"}]}",
            "/gamerule sendcommandfeedback false",
            "/execute @s ~~~ tp @s ~~~ 0 0 true"
          ],
          "transitions": [
            {"kaminari3_1":"(1.0)"}
          ]
        },
        "kaminari3_1":{
          "animations" : [ "kaminari3_ani" ],
          "on_entry": [
            "/event entity @s variant3",
            "/function kaminari/kaminari2"
          ],
          "on_exit": [
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 60 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0 && !query.is_using_item;"}
          ]
        },
        "kaminari4":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6遠雷\"}]}",
            "/event entity @s variant4"
          ],
          "transitions": [
            {"kaminari4_2":"!query.is_using_item"}
          ]
        },
        "kaminari4_2":{
          "animations" : [ "kaminari4_ani" ],
          "on_exit": [
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 20 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0;"}
          ]
        },
        "kaminari5":{
          "animations" : [ "kaminari5_ani" ],
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6熱界雷\"}]}",
            "/event entity @s variant5"
          ],
          "on_exit": [
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 20 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0 && !query.is_using_item;"}
          ]
        },
        "kaminari6":{
          "animations" : [ "kaminari6_ani" ],
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6電轟雷轟\"}]}",
            "/effect @s speed 99999 10 true"
          ],
          "transitions": [
            {"kaminari6_2":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 10 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0;"}
          ]
        },
        "kaminari6_2":{
          "animations" : [ "kaminari6_2_ani" ],
          "on_entry": [
            "/tag @s add kokyu_kaminari6",
            "/event entity @s variant6"
          ],
          "on_exit": [
            "/effect @s speed 0",
            "/tag @s remove kokyu_kaminari6",
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 20 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0;"}
          ]
        },
        "kaminari7":{
          "animations" : [ "kaminari7_ani" ],
          "on_entry": [
            "/effect @s speed 99999 20 true",
            "/tag @s add kokyu_kaminari7",
            "/tag @e[r=50,c=1,tag=!kokyu_kaminari7,family=monster] add kokyu_kaminari7_target",
            "/event entity @s variant7"
          ],
          "transitions": [
            {"kaminari7_2":"!query.is_using_item"}
          ]
        },
        "kaminari7_2":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6火雷神\"}]}",
            "/gamerule sendcommandfeedback false",
            "/execute @e[tag=kokyu_kaminari7_target] ^^^2 tp @e[tag=kokyu_kaminari7] ~~~",
            "/execute @s ~~~ particle kurokumaft:kaminari2_particle ~~~",
            "/execute @s ~~~ damage @e[tag=!kokyu_kaminari7,r=15] 20 lightning"
          ],
          "on_exit": [
            "/effect @s speed 0",
            "/tag @s remove kokyu_kaminari7",
            "/tag @s remove kokyu_kaminari7_target",
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"variable.kokyu_kaminari_attack = variable.kokyu_kaminari_attack < 20 ? variable.kokyu_kaminari_attack + 1:0;return variable.kokyu_kaminari_attack == 0 && !query.is_using_item;"}
          ]
        }
      }
    }
  }
}