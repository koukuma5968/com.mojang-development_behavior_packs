{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.hono_attack": {
      "states": {
        "default": {
          "transitions": [
            { "hono1_attack": "query.variant == 1 && query.scoreboard('hono1') >= 0 && variable.attack_time" }
          ]
        },
        "hono1_attack":{
          "on_entry": [
            "/function hono/hono1",
            "/scoreboard players add @s hono1 1"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}