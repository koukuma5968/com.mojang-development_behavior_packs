{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.mizu10_attack": {
      "states": {
        "default": {
          "transitions": [
            { "attack": "query.scoreboard('mizu10') >= 1 && variable.attack_time" }
          ]
        },
        "attack":{
          "on_entry": [
            "/event entity @s variant10",
            "/summon kurokumaft:mizu10_doragon mizu10_doragon ^^2^1",
            "/scoreboard players add @s mizu10 1",
            "/function mizu/mizu10/mizu10"
          ],
          "on_exit": [
            "/event entity @s variant0"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}