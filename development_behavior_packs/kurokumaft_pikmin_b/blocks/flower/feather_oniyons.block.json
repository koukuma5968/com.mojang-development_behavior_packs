{
	"format_version": "1.19.50",
	"minecraft:block": {
		"description": {
			"identifier": "kurokumaft:feather_oniyons",
			"menu_category": {
				"category": "none"
			},
			"properties": {
				"kurokumaft:growth": [0, 1, 2, 3]
			}
		},
		"components": {
			"minecraft:collision_box": false,
			"minecraft:geometry": "geometry.oniyon",
			"minecraft:loot": "loot_tables/empty.json",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 0
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 0
			},
			"minecraft:placement_filter": {
				"conditions": [
					{
						"allowed_faces": ["up"],
						"block_filter": [
							{"name": "farmland"},
							{"name": "grass"},
							{"name": "dirt"}
						]
					}
				]
			},
			"minecraft:random_ticking": {
				"on_tick": {
					"condition": "query.block_property('kurokumaft:growth') < 3",
					"event": "growth"
				}
			},
			"minecraft:on_interact": {
				"condition": "query.is_item_name_any('slot.weapon.mainhand',0,'minecraft:bone_meal')",
				"event": "meal_growth"
			}
		},
		"permutations": [
			{
				"condition": "query.block_property('kurokumaft:growth') == 0",
				"components": {
					"minecraft:selection_box": {
						"origin": [-8.0, 0.0, -8.0]	,
						"size": [16.0, 1.0, 16.0]
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "feather_oniyon_stage_0",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "query.block_property('kurokumaft:growth') == 1",
				"components": {
					"minecraft:selection_box": {
						"origin": [-8.0, 0.0, -8.0]	,
						"size": [16.0, 8.0, 16.0]
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "feather_oniyon_stage_1",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "query.block_property('kurokumaft:growth') == 2",
				"components": {
					"minecraft:selection_box": {
						"origin": [-8.0, 0.0, -8.0]	,
						"size": [16.0, 16.0, 16.0]
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "feather_oniyon_stage_2",
							"render_method": "alpha_test"
						}
					}
				}
			},
			{
				"condition": "query.block_property('kurokumaft:growth') == 3",
				"components": {
					"minecraft:selection_box": {
						"origin": [-8.0, 0.0, -8.0]	,
						"size": [16.0, 10.0, 16.0]
					},
					"minecraft:material_instances": {
						"*": {
							"texture": "feather_oniyon_stage_3",
							"render_method": "alpha_test"
						}
					},
					"minecraft:on_interact": {
						"event": "tame_oniyon"
					}
				}
			}
		],
		"events": {
			"growth": {
			  "set_block_property": {
				"kurokumaft:growth": "query.block_property('kurokumaft:growth') < 3 ? query.block_property('kurokumaft:growth') + 1 : 3"
			  }
			},
			"meal_growth": {
				"run_command": {
					"command":  "particle minecraft:crop_growth_emitter ~~~"
				},
				"set_block_property": {
				  "kurokumaft:growth": "query.block_property('kurokumaft:growth') < 3 ? query.block_property('kurokumaft:growth') + 1 : 3"
				}
			},
			"tame_oniyon": {
				"die": {
					"target": "self"
				},
				"run_command": {
					"command":  [
						"summon kurokumaft:feather_oniyon_base"
					]
				}
		 	}
		}
	}
}