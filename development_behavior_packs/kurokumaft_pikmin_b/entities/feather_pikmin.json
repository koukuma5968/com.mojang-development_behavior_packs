{
  "format_version": "1.17.20",
  "minecraft:entity": {
    "description": {
      "identifier": "kurokumaft:feather_pikmin",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "component_groups": {
      "kurokumaft:pikmin_plant": {
        "minecraft:type_family": {
          "family": [ "pikmin_plant", "mob" ]
        },
        "minecraft:experience_reward": {
          "on_bred": "Math.Random(1,7)",
          "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
        },
        "minecraft:attack": {
          "damage": 0
        },
        "minecraft:ageable": {
          "duration": 1200,
          "grow_up": {
            "condition": "query.skin_id <= 1",
            "event": "kurokumaft:grow_up",
            "target": "self"
          }
        },
        "minecraft:variant": {
          "value": 0
        },
        "minecraft:tameable": {
          "probability": 1,
          "tame_items": "honeycomb",
          "tame_event": {
            "event": "minecraft:on_tame",
            "target": "self"
          }
        }
      },

      "kurokumaft:leaf_skin": {
        "minecraft:skin_id": {
          "value": 0
        }
      },

      "kurokumaft:bud_skin": {
        "minecraft:skin_id": {
          "value": 1
        }
      },

      "kurokumaft:flower_skin": {
        "minecraft:skin_id": {
          "value": 2
        }
      },

      "kurokumaft:pikmin_unplug": {
        "minecraft:type_family": {
          "family": [ "pikmin", "mob" ]
        },
        "minecraft:is_tamed": {
        },
        "minecraft:behavior.random_hover": {
          "priority": 12,
          "xz_dist": 8,
          "y_dist": 8,
          "y_offset": 6,
          "interval": 6,
          "hover_height": [4, 8]
        },
        "minecraft:behavior.float": {
          "priority": 19
        },
        "minecraft:navigation.hover": {
            "can_path_over_water": true,
            "can_sink": false,
            "can_pass_doors": false,
            "can_path_from_air": true,
            "avoid_water": true,
            "avoid_damage_blocks": true,
            "avoid_sun": false
        },
        "minecraft:movement.hover": {},
        "minecraft:can_fly": {},
  
        "minecraft:annotation.break_door": {
        },
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:jump.static": {
        },
        "minecraft:can_climb": {
        },
        "minecraft:balloonable": {
          "mass": 0.8
        },
        "minecraft:interact": {
          "interactions": [
            {
              "on_interact": {
                "filters": {
                  "all_of": [
                    {"test": "is_skin_id", "operator": "!=", "subject": "self", "value": 2},
                    {"test": "has_equipment","subject": "other","domain": "hand","value": "honeycomb"},
                    {"test": "is_family","subject": "other","value": "player"}
                  ]
                },
                "event": "kurokumaft:grow_up"
              },
              "use_item": false,
              "interact_text": "action.interact.barter"
            }
          ]
        },
        "minecraft:hurt_on_condition": {
          "damage_conditions": [
            {
              "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
              "cause": "lava",
              "damage_per_tick": 4
            }
          ]
        },
        "minecraft:behavior.nearest_attackable_target": {
          "priority": 2,
          "must_see": true,
          "reselect_targets": true,
          "within_radius": 25.0,
          "must_see_forget_duration": 17.0,
          "entity_types": [
            {
              "filters": {
                "any_of": [
                  { "test": "is_family", "subject": "other", "value": "skeleton" },
                  { "test": "is_family", "subject": "other", "value": "zombie" },
                  { "test": "is_family", "subject": "other", "value": "monster" },
                  { "test": "is_family", "subject": "other", "value": "creeper" },
                  { "test": "is_family", "subject": "other", "value": "protist" }
                ]
              },
              "max_dist": 25
            }
          ]
        },
        "minecraft:behavior.follow_owner": {
          "priority": 6,
          "speed_multiplier": 1.0,
          "start_distance": 10,
          "stop_distance": 6
        },
        "minecraft:leashable": {
          "soft_distance": 4.0,
          "hard_distance": 6.0,
          "max_distance": 10.0,
          "on_leash": {
            "event": "minecraft:on_leash",
            "target": "self"
          },
          "on_unleash": {
            "event": "minecraft:on_unleash",
            "target": "self"
          }
        }
      },

      "kurokumaft:pikmin_leaf": {
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? Math.Random(1,3) : 0"
        },
        "minecraft:attack": {
          "damage": 2
        },
        "minecraft:flying_speed": {
          "value": 0.25
        },
        "minecraft:movement": {
          "value": 0.25
        }
      },

      "kurokumaft:pikmin_bud": {
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? Math.Random(2,4) : 0"
        },
        "minecraft:attack": {
          "damage": 3
        },
        "minecraft:flying_speed": {
          "value": 0.3
        },
        "minecraft:movement": {
          "value": 0.3
        }
      },

      "kurokumaft:pikmin_flower": {
        "minecraft:experience_reward": {
          "on_death": "query.last_hit_by_player ? Math.Random(4,6) : 0"
        },
        "minecraft:attack": {
          "damage": 5
        },
        "minecraft:flying_speed": {
          "value": 0.5
        },
        "minecraft:movement": {
          "value": 0.5
        }
      }

    },

    "components": {
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:health": {
        "value": 8,
        "max": 8
      },
      "minecraft:scale": {
        "value": 1.6
      },
      "minecraft:collision_box": {
        "width": 0.5,
        "height": 0.5
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_water": true,
        "breathes_air": true,
        "breathes_lava": true
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "fall",
            "deals_damage": false
          },
          {
            "cause": "fly_into_wall",
            "deals_damage": false
          }
        ]
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/pikmin/pikmin.json"
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:behavior.equip_item": {
        "priority": 2
      },
      "minecraft:behavior.melee_attack": {
        "priority": 3
      },
      "minecraft:behavior.random_stroll": {
        "priority": 7,
        "speed_multiplier": 1
      },
      "minecraft:behavior.look_at_player": {
        "priority": 8,
        "look_distance": 6,
        "probability": 0.02
      },
      "minecraft:behavior.random_look_around": {
        "priority": 9
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },

      "minecraft:physics": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
      "minecraft:entity_spawned": {
        "add": {
          "component_groups": [
            "kurokumaft:pikmin_plant",
            "kurokumaft:leaf_skin"
          ]
        }
      },
      "kurokumaft:grow_up": {
        "sequence": [
					{
						"filters": {
							"test": "is_skin_id", "operator": "==", "subject": "self", "value": 0
						},
            "remove": {
              "component_groups": [
                "kurokumaft:leaf_skin"
              ]
            },
            "add": {
              "component_groups": [
                "kurokumaft:bud_skin"
              ]
            }
          },
					{
						"filters": {
							"test": "is_skin_id", "operator": "==", "subject": "self", "value": 1
						},
            "remove": {
              "component_groups": [
                "kurokumaft:bud_skin"
              ]
            },
            "add": {
              "component_groups": [
                "kurokumaft:flower_skin"
              ]
            }
					}
				]
      },
      "minecraft:on_tame": {
        "sequence": [
          {
            "remove": {
              "component_groups": [
                "kurokumaft:pikmin_plant"
              ]
            },
            "add": {
              "component_groups": [
                "kurokumaft:pikmin_unplug"
              ]
            }
          },
          {
						"filters": {
							"test": "is_skin_id", "operator": "==", "subject": "self", "value": 0
						},
            "add": {
              "component_groups": [
                "kurokumaft:pikmin_leaf"
              ]
            }    
					},
					{
						"filters": {
							"test": "is_skin_id", "operator": "==", "subject": "self", "value": 1
						},
            "add": {
              "component_groups": [
                "kurokumaft:pikmin_bud"
              ]
            }
					},
					{
						"filters": {
							"test": "is_skin_id", "operator": "==", "subject": "self", "value": 2
						},
            "add": {
              "component_groups": [
                "kurokumaft:pikmin_flower"
              ]
            }
					}
				]
      }
    }
  }
}