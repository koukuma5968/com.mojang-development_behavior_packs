{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.hi_dragon_attack": {
      "states": {
        "default": {
          "transitions": [
            { "attack": "query.scoreboard('hi6') == 1&& variable.attack_time" }
          ]
        },
        "attack":{
          "on_entry": [
            "/tag @s add kokyu_hi6",
            "/event entity @s variant16",
            "/execute @s ~~~ damage @e[tag=!kokyu_hi6,r=5] 15 entity_attack"
          ],
          "on_exit": [
            "/event entity @s variant0",
            "/tag @s remove kokyu_hi6"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}