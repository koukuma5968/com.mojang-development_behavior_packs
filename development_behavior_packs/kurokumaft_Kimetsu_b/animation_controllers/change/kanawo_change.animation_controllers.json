{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.kanawo_change": {
      "states": {
        "default": {
          "transitions": [
            { "kanawo2": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.scoreboard('kanawo') == 7 && query.is_sneaking" },
            { "kanawo4": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.scoreboard('kanawo') == 2 && query.is_sneaking" },
            { "kanawo5": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.scoreboard('kanawo') == 4 && query.is_sneaking" },
            { "kanawo6": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.scoreboard('kanawo') == 5 && query.is_sneaking" },
            { "kanawo7": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_kanawo') && query.scoreboard('kanawo') == 6 && query.is_sneaking" }
          ]
        },
        "kanawo2":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 弐ノ型\"}]}",
            "/scoreboard players set @s kanawo 2"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kanawo4":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 肆ノ型\"}]}",
            "/scoreboard players set @s kanawo 4"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kanawo5":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 伍ノ型\"}]}",
            "/scoreboard players set @s kanawo 5"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kanawo6":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 陸ノ型\"}]}",
            "/scoreboard players set @s kanawo 6"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kanawo7":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§d花の呼吸 終ノ型\"}]}",
            "/scoreboard players set @s kanawo 7"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        }
      }
    }
  }
}