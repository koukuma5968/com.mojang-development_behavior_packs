{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.oto_change": {
      "states": {
        "default": {
          "transitions": [
            { "oto1": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_oto') && query.scoreboard('oto') == 5 && query.is_sneaking" },
            { "oto4": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_oto') && query.scoreboard('oto') == 1 && query.is_sneaking" },
            { "oto5": "query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:nichirintou_oto') && query.scoreboard('oto') == 4 && query.is_sneaking" }
          ]
        },
        "oto1":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§e音の呼吸 壱ノ型\"}]}",
            "/scoreboard players set @s oto 1"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "oto4":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§e音の呼吸 肆ノ型\"}]}",
            "/scoreboard players set @s oto 4"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "oto5":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§e音の呼吸 伍ノ型\"}]}",
            "/scoreboard players set @s oto 5"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        }
      }
    }
  }
}