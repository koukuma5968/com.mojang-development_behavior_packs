{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.hono_change": {
      "states": {
        "default": {
          "transitions": [
            { "hono1": "query.skin_id == 14 && query.variant == 5 && query.is_sneaking" },
            { "hono2": "query.skin_id == 14 && query.variant == 1 && query.is_sneaking" },
            { "hono3": "query.skin_id == 14 && query.variant == 2 && query.is_sneaking" },
            { "hono4": "query.skin_id == 14 && query.variant == 3 && query.is_sneaking" },
            { "hono5": "query.skin_id == 14 && query.variant == 4 && query.is_sneaking" }
          ]
        },
        "hono1":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§4炎の呼吸 壱ノ型\"}]}",
            "/event entity @s variant1",
            "/event entity @s mark_variant0"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hono2":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§4炎の呼吸 弐ノ型\"}]}",
            "/event entity @s variant2",
            "/event entity @s mark_variant0"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hono3":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§4炎の呼吸 参ノ型\"}]}",
            "/event entity @s variant3",
            "/event entity @s mark_variant0"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hono4":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§4炎の呼吸 肆ノ型\"}]}",
            "/event entity @s variant4",
            "/event entity @s mark_variant0"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "hono5":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§4炎の呼吸 伍ノ型\"}]}",
            "/event entity @s variant5",
            "/event entity @s mark_variant0"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        }
      }
    }
  }
}