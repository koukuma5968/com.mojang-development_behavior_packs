{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.kaminari_change": {
      "states": {
        "default": {
          "transitions": [
            { "kaminari1": "query.is_item_name_any('slot.weapon.mainhand',0,'kurokumaft:nichirintou_kaminari') && query.variant == 6 && query.is_sneaking" },
            { "kaminari2": "query.is_item_name_any('slot.weapon.mainhand',0,'kurokumaft:nichirintou_kaminari') && query.variant == 1 && query.is_sneaking" },
            { "kaminari3": "query.is_item_name_any('slot.weapon.mainhand',0,'kurokumaft:nichirintou_kaminari') && query.variant == 2 && query.is_sneaking" },
            { "kaminari4": "query.is_item_name_any('slot.weapon.mainhand',0,'kurokumaft:nichirintou_kaminari') && query.variant == 3 && query.is_sneaking" },
            { "kaminari5": "query.is_item_name_any('slot.weapon.mainhand',0,'kurokumaft:nichirintou_kaminari') && query.variant == 4 && query.is_sneaking" },
            { "kaminari6": "query.is_item_name_any('slot.weapon.mainhand',0,'kurokumaft:nichirintou_kaminari') && query.variant == 5 && query.is_sneaking" }
          ]
        },
        "kaminari1":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6雷の呼吸 壱ノ型\"}]}",
            "/event entity @s variant1"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kaminari2":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6雷の呼吸 弐ノ型\"}]}",
            "/event entity @s variant2"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kaminari3":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6雷の呼吸 参ノ型\"}]}",
            "/event entity @s variant3"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kaminari4":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6雷の呼吸 肆ノ型\"}]}",
            "/event entity @s variant4"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kaminari5":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6雷の呼吸 伍ノ型\"}]}",
            "/event entity @s variant5"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        },
        "kaminari6":{
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§6雷の呼吸 陸ノ型\"}]}",
            "/event entity @s variant6"
          ],
          "transitions": [
            {"default":"!query.is_sneaking"}
          ]
        }
      }
    }
  }
}