          ],
          "transitions": [
            {"default":"variable.kokyu_kasumi_attack = variable.kokyu_kasumi_attack < 10 ? variable.kokyu_kasumi_attack + 1:0;return variable.kokyu_kasumi_attack == 0;"}
          ]
        },
        "kasumi3":{
          "on_entry": [
            "/event entity @s mark_variant1"
          ],
          "transitions": [
            {"kasumi3_at":"!query.is_using_item"}
