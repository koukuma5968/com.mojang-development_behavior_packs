{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.kokyu.mizu10_attack": {
      "states": {
        "default": {
          "transitions": [
            { "attack": "query.variant == 10 && query.equipped_item_any_tag('slot.weapon.mainhand','kurokumaft:kokyu_mizu') && query.mark_variant == 1 && variable.attack_time" }
          ]
        },
        "attack":{
          "on_entry": [
            "/event entity @s mark_variant2",
            "/function mizu/mizu10/mizu10"
          ],
          "on_exit": [
            "/event entity @s mark_variant1"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        }
      }
    }
  }
}