{
  "format_version": "1.20.30",
  "minecraft:entity": {
    "description": {
      "identifier": "minecraft:player",
      "is_spawnable": false,
      "is_summonable": false,
      "is_experimental": false,
      "scripts":{
        "animate":[
          "main_shield",
          "off_shield",
          "machine_gun_shot"
        ]
      },
      "animations":{
        "main_shield":"controller.animation.armor.main_shield",
        "off_shield":"controller.animation.armor.off_shield",
        "gatling_shot":"controller.animation.machine_gun.shot",
        "machine_gun_shot":"controller.animation.machine_gun.shot"
      }

    },

    "component_groups": {
      "minecraft:add_bad_omen": {
        "minecraft:spell_effects": {
          "add_effects": [
            {
              "effect": "bad_omen",
              "duration": 6000,
              "visible": false,
              "display_on_screen_animation": true
            }
          ]
        },
        "minecraft:timer": {
          "time": [ 0.0, 0.0 ],
          "looping": false,
          "time_down_event": {
            "event": "minecraft:clear_add_bad_omen",
            "target": "self"
          }
        }
      },
      "minecraft:clear_bad_omen_spell_effect": {
        "minecraft:spell_effects": {
        }
      },
      "minecraft:raid_trigger": {
        "minecraft:raid_trigger": {
          "triggered_event": {
            "event": "minecraft:remove_raid_trigger",
            "target": "self"
          }
        },
        "minecraft:spell_effects": {
          "remove_effects": "bad_omen"
        }
      },
      "kurokumaft:gatling_shot": {
        "minecraft:spawn_entity": {
          "entities": [
            {
              "min_wait_time": 0.3,
              "max_wait_time": 0.3,
              "spawn_entity": "kurokumaft:twenty_two_lr_entity",
              "spawn_event": "minecraft:entity_spawned",
              "single_use": false,
              "num_to_spawn": 3,
              "should_leash": false
            }
          ]
        },
        "minecraft:environment_sensor": {
          "triggers": [
            {
              "filters": {
                "all_of": [
                  {"test": "has_equipment","domain": "hand","operator": "!=","subject": "self","value": "kurokumaft:twenty_two_lr"}
                ]
              },
              "event": "kurokumaft:gatling_off"
            }
          ]
        }
      },
      "kurokumaft:machine_gun_shot": {
        "minecraft:spawn_entity": {
          "entities": [
            {
              "min_wait_time": 0.8,
              "max_wait_time": 0.8,
              "spawn_entity": "kurokumaft:thirty_eight_special_entity",
              "spawn_event": "minecraft:entity_spawned",
              "single_use": false,
              "num_to_spawn": 1,
              "should_leash": false
            }
          ]
        }
      }
    },

    "components": {
      "minecraft:experience_reward": {
        "on_death": "Math.Min(query.player_level * 7, 100)"
      },
      "minecraft:type_family": {
        "family": [ "player" ]
      },
      "minecraft:is_hidden_when_invisible": {
      },
      "minecraft:loot": {
        "table": "loot_tables/empty.json"
      },
      "minecraft:collision_box": {
        "width": 0.6,
        "height": 1.8
      },
      "minecraft:can_climb": {
      },
      "minecraft:movement": {
        "value": 0.1
      },
      "minecraft:hurt_on_condition": {
        "damage_conditions": [
          {
            "filters": { "test": "in_lava", "subject": "self", "operator": "==", "value": true },
            "cause": "lava",
            "damage_per_tick": 4
          }
        ]
      },
      "minecraft:attack": {
        "damage": 1
      },
      "minecraft:exhaustion_values": {
        "heal": 6,
        "jump": 0.05,
        "sprint_jump": 0.2,
        "mine": 0.005,
        "attack": 0.1,
        "damage": 0.1,
        "walk": 0.0,
        "sprint": 0.1,
        "swim": 0.01
      },
      "minecraft:player.saturation": {
        "value": 5,
         "max": 20
      },
      "minecraft:player.exhaustion": {
        "value": 0,
        "max": 20
      },
      "minecraft:player.level": {
        "value": 0,
        "max": 24791
      },
      "minecraft:player.experience": {
        "value": 0,
        "max": 1
      },
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": -1,
        "inhale_time": 3.75,
        "generates_bubbles": false
      },
      "minecraft:nameable": {
        "always_show": true,
        "allow_name_tag_renaming": false
      },
      "minecraft:physics": {
        "push_towards_closest_space": true
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:insomnia": {
        "days_until_insomnia": 3
      },
      "minecraft:rideable": {
        "seat_count": 2,
        "family_types": [
          "parrot_tame"
        ],
        "pull_in_entities": true,
        "seats": [
          {
            "position": [ 0.4, -0.2, -0.1 ],
            "min_rider_count": 0,
            "max_rider_count": 0,
            "lock_rider_rotation": 0
          },
          {
            "position": [ -0.4, -0.2, -0.1 ],
            "min_rider_count": 1,
            "max_rider_count": 2,
            "lock_rider_rotation": 0
          }
        ]
      },
      "minecraft:conditional_bandwidth_optimization": {
      },
      "minecraft:block_climber": {},
      "minecraft:environment_sensor": {
        "triggers": [
          {
            "filters": {
              "all_of": [
                {"test": "has_mob_effect","subject": "self","value": "bad_omen"},
                {"test": "is_in_village","subject": "self","value": true}
              ]
            },
            "event": "minecraft:trigger_raid"
          }
        ]
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "on_damage": {
              "filters": {
                "all_of" : [
                  {
                    "any_of" :[
                      {"test": "has_tag","operator": "equals","subject": "self","value": "main_shield_guard"},
                      {"test": "has_tag","operator": "equals","subject": "self","value": "off_shield_guard"}
                    ]
                  },
                  {
                    "any_of" :[
                      {"test": "has_damage","operator": "equals","subject": "self","value": "attack"},
                      {"test": "has_damage","operator": "equals","subject": "self","value": "block_explosion"},
                      {"test": "has_damage","operator": "equals","subject": "self","value": "entity_explosion"},
                      {"test": "has_damage","operator": "equals","subject": "self","value": "projectile"},
                      {"test": "has_damage","operator": "equals","subject": "self","value": "magic"}
                    ]
                  }
                ]
              },
              "event": "kurokumaft:shield_damage"
            },
            "cause": "all",
            "deals_damage": false,
            "on_damage_sound_event": "item.shield.block"
          }
        ]
      }

    },

    "events": {
      "minecraft:gain_bad_omen": {
        "add": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        }
      },
      "minecraft:clear_add_bad_omen": {
        "remove": {
          "component_groups": [
            "minecraft:add_bad_omen"
          ]
        },
        "add": {
          "component_groups": [
            "minecraft:clear_bad_omen_spell_effect"
          ]
        }
      },
      "minecraft:trigger_raid": {
        "add": {
          "component_groups": [ "minecraft:raid_trigger" ]
        }
      },
      "minecraft:remove_raid_trigger": {
        "remove": {
          "component_groups": [ "minecraft:raid_trigger" ]
        }
      },
      "kurokumaft:shield_guard": {
        "add": {
          "component_groups": [ "kurokumaft:shield_guard" ]
        }
      },
      "kurokumaft:shield_guard_remove": {
        "remove": {
          "component_groups": [ "kurokumaft:shield_guard" ]
        }
      },
      "kurokumaft:shield_damage": {
        "sequence": [
					{
						"filters": {
							"test": "has_tag", "operator": "==", "subject": "self", "value": "main_shield_guard"
						},
						"trigger": "kurokumaft:shield_damage_main"
					},
					{
						"filters": {
							"test": "has_tag", "operator": "==", "subject": "self", "value": "off_shield_guard"
						},
						"trigger": "kurokumaft:shield_damage_off"
					}
				]
      },
      "kurokumaft:shield_damage_main": {
        "sequence": [
					{
						"filters": {
							"test": "has_equipment", "domain": "hand", "operator": "==", "subject": "self", "value": "kurokumaft:copper_shield"
						},
            "run_command": {
              "command": [
                "titleraw @s actionbar {\"rawtext\":[{\"text\":\"銅の盾\"}]}"
              ],
              "target": "self"
            }
					},
					{
					  "filters": {
							"test": "has_equipment", "domain": "hand", "operator": "==", "subject": "self", "value": "kurokumaft:kettle_lid"
					  },
            "run_command": {
              "command": [
                "titleraw @s actionbar {\"rawtext\":[{\"text\":\"なべぶた\"}]}"
              ],
              "target": "self"
            }
					}
				]
      },
      "kurokumaft:shield_damage_off": {
        "sequence": [
					{
						"filters": {
							"test": "has_equipment", "domain": "hand", "operator": "==", "subject": "self", "value": "kurokumaft:copper_shield"
						},
            "run_command": {
              "command": [
                "titleraw @s actionbar {\"rawtext\":[{\"text\":\"銅の盾1\"}]}"
              ],
              "target": "self"
            }
					},
					{
					  "filters": {
							"test": "has_equipment", "domain": "hand", "operator": "==", "subject": "self", "value": "kurokumaft:kettle_lid"
					  },
            "run_command": {
              "command": [
                "titleraw @s actionbar {\"rawtext\":[{\"text\":\"なべぶた\"}]}"
              ],
              "target": "self"
            }
					}
				]
      },
      "kurokumaft:gatling_shot": {
        "add": {
          "component_groups": [
            "kurokumaft:gatling_shot"
          ]
        }
      },
      "kurokumaft:gatling_off": {
        "run_command": {
          "command": [
            "execute as @e[family=gatling,c=1] at @s run event entity @s kurokumaft:despawn",
            "tag @s remove gatling_shot",
            "tag @s remove gun_shot"
          ],
          "target": "self"
        },
        "remove": {
          "component_groups": [
            "kurokumaft:gatling_shot"
          ]
        }
      },
      "kurokumaft:machine_gun_shot": {
        "add": {
          "component_groups": [
            "kurokumaft:machine_gun_shot"
          ]
        }
      },
      "kurokumaft:machine_gun_off": {
        "remove": {
          "component_groups": [
            "kurokumaft:machine_gun_shot"
          ]
        }
      }
    }
  }
}




