{
  "format_version": "1.17",
  "minecraft:item": {
    "description": {
      "identifier": "kurokumaft:wood_scythe",
      "category": "equipment"
    },
    "components": {
      "minecraft:creative_category": {
        "parent": "itemGroup.name.scythe"
      },
      "minecraft:hand_equipped": true,
      "minecraft:damage": 2,
		  "minecraft:weapon": {
        "on_hurt_entity": {
          "event":"kurokumaft:wood_scythe"
        },
        "on_not_hurt_entity": {
          "event":"kurokumaft:wood_scythe"
        }
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "use_trigger"
        }
      },
      "minecraft:enchantable": {
        "value": 10,
        "slot": "sword"
      },
      "minecraft:use_animation": "bow",
      "minecraft:can_destroy_in_creative": false,
      "minecraft:durability": {
        "max_durability": 60
      },
      "minecraft:max_stack_size": 1,
      "minecraft:icon": {
        "texture": "wood_scythe"
      },
      "minecraft:display_name": {
        "value": "item.kurokumaft:wood_scythe.name"
      },
      "minecraft:wearable": {
        "slot": "slot.weapon.mainhand"
      }
    },
    "events": {
      "kurokumaft:wood_scythe": {
        "sequence":[
          {
            "run_command": {
              "command": [
                "tag @s add w_scythe_s",
                "tag @e[tag=!w_scythe_s,r=5.5] add w_scythe_t",
                "particle kurokumaft:sweep_particle ^ ^1 ^2.4",
                "execute @e[tag=w_scythe_t] ~ ~ ~ damage @s 1 entity_attack entity @e[tag=w_scythe_s]",
                "tag @s remove w_scythe_s",
                "tag @e[tag=w_scythe_t] remove w_scythe_t"
              ],
              "target": "self"
            }
          },
          {
            "damage":{
              "type":"durability",
              "target":"self",
              "amount":5
            }
          }
        ]
      },
      "use_trigger": {
        "sequence":[
          {
            "condition": "!query.is_sneaking",
            "trigger": "circle_scythe"
          },
          {
            "condition": "query.is_sneaking",
            "trigger": "change_sickle"
          }
        ]
      },
      "circle_scythe": {
        "run_command": {
          "command": [
            "titleraw @s actionbar {\"rawtext\":[{\"text\":\"鎌飛ばし\"}]}"
          ],
          "target": "player"
        },
        "shoot": {
          "projectile": "kurokumaft:roar_scythe",
          "launch_power": 0.1
        },
        "damage":{
          "type":"durability",
          "target":"self",
          "amount":10
        }
      },
      "change_sickle": {
        "run_command": {
          "command": [
            "replaceitem entity @s slot.weapon.mainhand 0 kurokumaft:wood_sickle"
          ],
          "target": "player"
        }
      }
    }
  }
}
