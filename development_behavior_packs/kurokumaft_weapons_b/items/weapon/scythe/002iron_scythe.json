{
  "format_version": "1.20.30",
  "minecraft:item": {
    "description": {
      "identifier": "kurokumaft:iron_scythe",
      "menu_category": {
        "category": "equipment",
        "group": "itemGroup.name.scythe"
      }
    },
    "components": {
      "minecraft:hand_equipped": true,
      "minecraft:damage": 3,
		  "minecraft:weapon": {
        "on_hurt_entity": {
          "event":"kurokumaft:iron_scythe"
        },
        "on_not_hurt_entity": {
          "event":"kurokumaft:iron_scythe"
        }
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "use_trigger"
        }
      },
      "minecraft:enchantable": {
        "value": 10,
        "slot": "sword"
      },
      "minecraft:use_animation": "bow",
      "minecraft:can_destroy_in_creative": false,
      "minecraft:durability": {
        "max_durability": 500
      },
      "minecraft:max_stack_size": 1,
      "minecraft:icon": {
        "texture": "iron_scythe"
      },
      "minecraft:display_name": {
        "value": "item.kurokumaft:iron_scythe.name"
      }
    },
    "events": {
      "kurokumaft:iron_scythe": {
        "sequence":[
          {
            "run_command": {
              "command": [
                "tag @s add i_scythe_s",
                "tag @e[tag=!i_scythe_s,r=5.5] add i_scythe_t",
                "particle kurokumaft:sweep_particle ^ ^1 ^2.4",
                "execute at @e[tag=i_scythe_t] run damage @s 1 entity_attack entity @e[tag=i_scythe_s]",
                "tag @s remove i_scythe_s",
                "tag @e[tag=i_scythe_t] remove i_scythe_t"
              ],
              "target": "self"
            }
          },
          {
            "damage":{
              "type":"durability",
              "target":"self",
              "amount":5
            }
          }
        ]
      },
      "use_trigger": {
        "sequence":[
          {
            "condition": "!query.is_sneaking",
            "trigger": "circle_scythe"
          },
          {
            "condition": "query.is_sneaking",
            "trigger": "change_sickle"
          }
        ]
      },
      "circle_scythe": {
        "run_command": {
          "command": [
            "tag @s add roar_scythe_as",
            "titleraw @s actionbar {\"rawtext\":[{\"text\":\"鎌飛ばし\"}]}"
          ],
          "target": "player"
        },
        "shoot": {
          "projectile": "kurokumaft:roar_scythe",
          "launch_power": 0.1
        },
        "damage":{
          "type":"durability",
          "target":"self",
          "amount":15
        }
      },
      "change_sickle": {
        "run_command": {
          "command": [
            "replaceitem entity @s slot.weapon.mainhand 0 kurokumaft:iron_sickle"
          ],
          "target": "player"
        }
      }
    }
  }
}
