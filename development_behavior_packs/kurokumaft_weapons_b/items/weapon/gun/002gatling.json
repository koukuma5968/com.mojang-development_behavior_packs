{
  "format_version": "1.20.30",
  "minecraft:item": {
    "description": {
      "identifier": "kurokumaft:gatling",
      "menu_category": {
        "category": "equipment",
        "group": "itemGroup.name.gun"
      }
    },
    "components": {
      "tag:gun": {},
      "minecraft:durability": {
        "max_durability": 1500
      },
      "minecraft:enchantable": {
        "value": 20,
        "slot": "bow"
      },
      "minecraft:max_stack_size": 1,
      "minecraft:icon": {
        "texture": "gatling"
      },
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [ "kurokumaft:gatling" ],
            "repair_amount": "(query.max_durability - query.remaining_durability) / 2"
          }
        ]
      },
      "minecraft:display_name": {
        "value": "item.kurokumaft:gatling.name"
      },
      "minecraft:on_use": {
        "on_use": {
          "condition": "query.is_item_name_any('slot.weapon.offhand', 'kurokumaft:twenty_two_lr')",
          "event": "kurokumaft:gatling_shot"
        }
      },
      "minecraft:use_animation": "bow",
      "minecraft:hand_equipped": true,
      "minecraft:chargeable": {
      }
    },
    "events": {
      "kurokumaft:gatling_shot": {
        "sequence":[
          {
            "damage":{
              "type":"durability",
              "target":"self",
              "amount":1
            }
          },
          {
            "condition": "!query.has_rider",
            "trigger": "kurokumaft:gatling_fire"
          },
          {
            "condition": "query.has_rider",
            "trigger": "kurokumaft:gatling_sotp"
          }
        ]
      },
      "kurokumaft:gatling_fire": {
        "run_command": {
          "command": [
            "tag @s add gatling_shot",
            "tag @s add gun_shot",
            "ride @s summon_rider kurokumaft:gatling_entity",
            "event entity @s kurokumaft:gatling_shot"
          ],
          "target": "self"
        }
      },
      "kurokumaft:gatling_sotp": {
        "run_command": {
          "command": [
            "event entity @s kurokumaft:gatling_off"
          ],
          "target": "self"
        }
      }
    }
  }
}
