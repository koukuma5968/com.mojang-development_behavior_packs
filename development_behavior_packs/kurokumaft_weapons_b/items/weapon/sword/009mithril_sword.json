{
  "format_version": "1.17",
  "minecraft:item": {
    "description": {
        "identifier": "kurokumaft:mithril_sword",
        "category": "equipment"
    },
    "components": {
      "minecraft:display_name": {
				"value": "item.kurokumaft:mithril_sword.name"
			},
      "minecraft:icon": {
          "texture": "mithril_sword"
      },
      "minecraft:creative_category": {
				"parent": "itemGroup.name.sword"
			},
      "minecraft:max_stack_size": 1,
      "minecraft:hand_equipped": true,
      "minecraft:durability": {
        "max_durability": 4000
      },
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [ "kurokumaft:mithril_ingot" ],
            "repair_amount": "(query.max_durability - query.remaining_durability) / 8"
          },
          {
            "items": [ "kurokumaft:mithril_sword" ],
            "repair_amount": "(query.max_durability - query.remaining_durability) / 2"
          }
        ]
      },
      "minecraft:mining_speed": 1.5,
      "minecraft:damage": 15,
      "minecraft:enchantable": {
        "value": 15,
        "slot": "sword"
      },
      "minecraft:can_destroy_in_creative": false,
      "minecraft:digger": {
        "use_efficiency": true,
        "destroy_speeds": [
          {
            "block": "minecraft:web",
            "speed": 5
          }
        ]
      },
      "minecraft:weapon": {
          "on_hit_block": {
            "event": "kurokumaft:set_break"
          },
          "on_hurt_entity": {
              "event": "kurokumaft:hurt_sweep"
          },
          "on_not_hurt_entity": {
              "event": "kurokumaft:hurt_sweep"
          }
      }
    },
    "events": {
      "kurokumaft:hurt_sweep": {
        "sequence":[
          {
            "run_command": {
              "command": [
                "particle kurokumaft:sweep_particle ^ ^1.8 ^2.4"
              ],
              "target": "self"
            }
          },
          {
            "run_command": {
              "command": [
                "damage @s 8 magic"
              ],
              "target": "other"
            },
            "trigger": "kurokumaft:hurt_entity"
          }
        ]
      },
      "kurokumaft:set_break": {
        "sequence":[
          {
            "run_command": {
              "command": [
                "setblock ~~~ minecraft:air 0 destroy"
              ],
              "target": "block"
            },
            "trigger": "kurokumaft:hurt_entity"
          }
        ]
      },
      "kurokumaft:hurt_entity": {
        "damage":{
          "type":"durability",
          "target":"self",
          "amount":1
        }
      }
    }
  }
}

