{
  "format_version": "1.17",
  "minecraft:item": {
    "description": {
        "identifier": "kurokumaft:magma_sword",
        "category": "equipment"
    },
    "components": {
      "minecraft:display_name": {
				"value": "item.kurokumaft:magma_sword.name"
			},
      "minecraft:icon": {
          "texture": "magma_sword"
      },
      "minecraft:creative_category": {
				"parent": "itemGroup.name.sword"
			},
      "minecraft:max_stack_size": 1,
      "minecraft:hand_equipped": true,
      "minecraft:durability": {
        "max_durability": 800
      },
      "minecraft:repairable": {
        "repair_items": [
          {
            "items": [ "minecraft:magma" ],
            "repair_amount": "(query.max_durability - query.remaining_durability) / 8"
          },
          {
            "items": [ "kurokumaft:magma_sword" ],
            "repair_amount": "(query.max_durability - query.remaining_durability) / 2"
          }
        ]
      },
      "minecraft:mining_speed": 1.5,
      "minecraft:damage": 6,
      "minecraft:enchantable": {
        "value": 15,
        "slot": "sword"
      },
      "minecraft:can_destroy_in_creative": false,
      "minecraft:digger": {
        "use_efficiency": true,
        "destroy_speeds": [
          {
            "block": "minecraft:web",
            "speed": 5
          },
          {
            "block": "minecraft:magma",
            "speed": 10
          }
        ]
      },
      "minecraft:on_use_on": {
        "on_use_on": {
          "event": "kurokumaft:set_magma"
        }
      },
      "minecraft:weapon": {
          "on_hit_block": {
            "event": "kurokumaft:set_magma"
          },
          "on_hurt_entity": {
              "event": "kurokumaft:hurt_fire"
          },
          "on_not_hurt_entity": {
              "event": "kurokumaft:hurt_fire"
          }
      }
    },
    "events": {
      "kurokumaft:hurt_fire": {
        "sequence":[
          {
            "run_command": {
              "command": [
                "summon kurokumaft:magma_sword_entity ~~~"
              ],
              "target": "other"
            },
            "trigger": "kurokumaft:hurt_entity"
          }
        ]
      },
      "kurokumaft:set_magma": {
        "sequence":[
          {
            "run_command": {
              "command": [
                "setblock ~~~ minecraft:magma 0 replace"
              ],
              "target": "block"
            },
            "trigger": "kurokumaft:hurt_entity"
          }
        ]
      },
      "kurokumaft:hurt_entity": {
        "damage":{
          "type":"durability",
          "target":"self",
          "amount":1
        }
      }
    }
  }
}

