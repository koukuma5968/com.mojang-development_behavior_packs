{
	"format_version": "1.19.50",
	"minecraft:block": {
		"description": {
			"identifier": "kurokumaft:millstone",
			"menu_category": {
				"category": "items"
			},
            "properties": {
                "kurokumaft:rotation": [ 1, 2, 3, 4, 5 ]
            }
		},
		"components": {
			"minecraft:collision_box": true,
			"minecraft:selection_box": {
				"origin": [-6.0, 0.0, -6.0],
				"size": [12.0, 12.0, 12.0]
			},
			"minecraft:display_name": "tile.kurokumaft:millstone.name",
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 30
			},
			"minecraft:crafting_table": {
				"crafting_tags": ["millstone"]
			},
            "minecraft:on_player_placing": {
                "event": "rotate"
            },
			"minecraft:geometry": "geometry.millstone",
			"minecraft:material_instances": {
				"*": {
					"texture": "millstone",
					"render_method": "alpha_test"
				}
			},
			"minecraft:map_color": "#65635e"
		},
        "events": {
            "rotate": {
                "sequence": [
                    {
                        "set_block_property": {
                            "kurokumaft:rotation": "(query.cardinal_facing_2d)"
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('kurokumaft:rotation') == 2",
                "components": {
                    "minecraft:rotation": [ 0, 0, 0 ]
                }
            },
            {
                "condition": "query.block_property('kurokumaft:rotation') == 3",
                "components": { 
                    "minecraft:rotation": [ 0, 180, 0 ]
                }
            },
            {
                "condition": "query.block_property('kurokumaft:rotation') == 4",
                "components": {
                    "minecraft:rotation": [ 0, 90, 0 ]
                }
            },
            {
                "condition": "query.block_property('kurokumaft:rotation') == 5",
                "components": {
                    "minecraft:rotation": [ 0, 270, 0 ]
                }
            }
        ]
	}
}