                "event": "rotate"
            },
			"minecraft:crafting_table": {
				"table_name": "tile.kurokumaft:ice_machine.name",
				"grid_size": 3,
				"crafting_tags": [
					"ice_machine"
				]
			}
		},
        "events": {
            "rotate": {
                "sequence": [
                    {
                        "set_block_state": {
                            "kurokumaft:rotation": "(query.cardinal_facing_2d)"
