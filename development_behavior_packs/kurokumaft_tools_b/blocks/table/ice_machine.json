{
	"format_version": "1.16.100",
	"minecraft:block": {
		"description": {
			"identifier": "kurokumaft:ice_machine",
            "properties": {
                "kurokumaft:rotation": [ 1, 2, 3, 4, 5 ]
            }
		},
		"components": {
			"minecraft:explosion_resistance": 0.5,
            "minecraft:creative_category": { 
                "category": "items"
            },
			"minecraft:destroy_time": 2.2,
			"minecraft:block_light_absorption": 0,
			"minecraft:loot": "loot_tables/blocks/ice_machine.json",
            "minecraft:on_player_placing": {
                "event": "rotate"
            },
			"minecraft:crafting_table": {
				"custom_description": "tile.kurokumaft:ice_machine.name",
				"grid_size": 3,
				"crafting_tags": [
					"ice_machine"
				]
			}
		},
        "events": {
            "rotate": {
                "sequence": [
                    {
                        "set_block_property": {
                            "kurokumaft:rotation": "(query.cardinal_facing_2d)"
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_property('kurokumaft:rotation') == 2",
                "components": {
                    "minecraft:rotation": [ 0, 180, 0 ]
                }
            },
            {
                "condition": "query.block_property('kurokumaft:rotation') == 3",
                "components": { 
                    "minecraft:rotation": [ 0, 0, 0 ]
                }
            },
            {
                "condition": "query.block_property('kurokumaft:rotation') == 4",
                "components": {
                    "minecraft:rotation": [ 0, 270, 0 ]
                }
            },
            {
                "condition": "query.block_property('kurokumaft:rotation') == 5",
                "components": {
                    "minecraft:rotation": [ 0, 90, 0 ]
                }
            }
        ]
	}
}