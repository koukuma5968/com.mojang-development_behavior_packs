                        "rotation": [ 0, 180, 0 ]
                    }
                }
            },
            {
                "condition": "query.block_state('kurokumaft:rotation') == 3",
                "components": { 
                    "minecraft:transformation": {
                        "rotation": [ 0, 0, 0 ]
                    }
                }
            },
            {
                "condition": "query.block_state('kurokumaft:rotation') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 270, 0 ]
                    }
                }
            },
            {
                "condition": "query.block_state('kurokumaft:rotation') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 90, 0 ]
                    }
                }
            }
