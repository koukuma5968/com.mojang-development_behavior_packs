{
	"format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "kurokumaft:ice_machine",
            "menu_category": {
				"category": "items"
			},
            "states": {
                "kurokumaft:rotation": [ 1, 2, 3, 4, 5 ]
            }
		},
		"components": {
            "minecraft:destructible_by_explosion": {
                "explosion_resistance": 0.5
            },
            "minecraft:destructible_by_mining": {
