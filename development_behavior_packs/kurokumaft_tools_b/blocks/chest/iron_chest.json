{
    "format_version": "1.20.30",
	"minecraft:block": {
		"description": {
			"identifier": "kurokumaft:iron_chest",
            "menu_category": {
				"category": "items",
                "group": "itemGroup.name.chest"
			},
            "states": {
                "kurokumaft:rotation": [ 1, 2, 3, 4, 5 ]
            }
		},
        "components": {
            "minecraft:geometry": "geometry.chest_entities",
            "minecraft:material_instances": {
                "*": {
                      "texture": "iron_chest",
                      "render_method": "opaque"
                }
            },
            "minecraft:on_player_placing": {
                "event": "rotate"
            },
            "minecraft:collision_box": true,
            "minecraft:selection_box": {
				"origin": [-8.0, 0.0, -8.0],
				"size": [14.0, 14.0, 14.0]
			},
            "minecraft:light_dampening": 1
        },
        "events": {
            "rotate": {
                "sequence": [
                    {
                        "run_command": {
                            "target": "block",
                            "command": "summon kurokumaft:iron_chest_entities ~ ~-0.5 ~ set_on_collision_box 鉄のチェスト"
                        }
                    },
                    {
                        "set_block_state": {
                            "kurokumaft:rotation": "(query.cardinal_facing_2d)"
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "condition": "query.block_state('kurokumaft:rotation') == 2",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 180, 0 ]
                    }
                }
            },
            {
                "condition": "query.block_state('kurokumaft:rotation') == 3",
                "components": { 
                    "minecraft:transformation": {
                        "rotation": [ 0, 0, 0 ]
                    }
                }
            },
            {
                "condition": "query.block_state('kurokumaft:rotation') == 4",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 270, 0 ]
                    }
                }
            },
            {
                "condition": "query.block_state('kurokumaft:rotation') == 5",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [ 0, 90, 0 ]
                    }
                }
            }
        ]
	}
}