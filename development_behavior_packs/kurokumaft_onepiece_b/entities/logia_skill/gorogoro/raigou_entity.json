{
  "format_version": "1.20.30",
  "minecraft:entity": {
    "description": {
      "identifier": "kurokumaft:raigou_entity",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:arrow",
      "scripts": { 
        "animate": [ 
          {"raigou_shot":"query.variant == 0"},
          {"raigou":"query.variant >= 1"},
          {"raigou_at":"query.variant == 2"}
        ]
      },
			"animations": { 
				"raigou": "animation.gorogoro.raigou",
				"raigou_shot": "animation.gorogoro.raigou_shot",
				"raigou_at": "animation.gorogoro.raigou_at"
			}
    },
    "component_groups": {
			"kurokumaft:spawned_raigou": {
        "minecraft:variant": {
          "value": 0
        },
        "minecraft:projectile": {
          "on_hit": {
            "definition_event": {
              "affect_projectile": true
            },
            "impact_damage": {
              "damage": 0,
              "knockback": false,
              "semi_random_diff_damage": false
            }
          },
          "destroy_on_hurt": true,
          "power": 0.5,
          "gravity": -0.03,
          "inertia": 1.0,
          "uncertaintyBase": 8,
          "uncertaintyMultiplier": 2.5,
          "anchor": 1,
          "offset": [0, 0, 0],
          "reflect_on_hurt": false,
          "catch_fire": false,
          "on_fire_time": 15
        },
        "minecraft:timer": {
          "looping": false,
          "randomInterval": false,
          "time": 2.00,
          "time_down_event": { 
            "event": "kurokumaft:wait_raigou"
          }
        },
        "minecraft:physics": {
          "has_collision": false,
          "has_gravity": false
        }
      },
      "kurokumaft:wait_raigou": {
        "minecraft:variant": {
          "value": 1
        },
        "minecraft:physics": {
          "has_collision": false,
          "has_gravity": true
        },
				"minecraft:behavior.float": {
					"priority": 0
				},
        "minecraft:timer": {
          "looping": false,
          "randomInterval": false,
          "time": 2.00,
          "time_down_event": { 
            "event": "kurokumaft:fall_raigou"
          }
				}
      },
      "kurokumaft:fall_raigou": {
        "minecraft:variant": {
          "value": 2
        },
        "minecraft:projectile": {
          "on_hit": {
            "definition_event": {
              "affect_projectile": true
            },
            "impact_damage": {
              "damage": 40,
              "knockback": false,
              "semi_random_diff_damage": false
            }
          },
          "destroy_on_hurt": true,
          "power": 3.0,
          "gravity": 0.10,
          "inertia": 1.0,
          "uncertaintyBase": 8,
          "uncertaintyMultiplier": 2.5,
          "anchor": 1,
          "offset": [0, 0, 0],
          "reflect_on_hurt": false,
          "catch_fire": false,
          "on_fire_time": 15
        },
        "minecraft:physics": {
          "has_collision": true,
          "has_gravity": true
        },
        "minecraft:timer": {
          "looping": false,
          "randomInterval": false,
          "time": 4.00,
          "time_down_event": { 
            "event": "kurokumaft:despawn"
          }
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": ["lightning", "inanimate", "raigou"]
      },
      "minecraft:collision_box": {
        "width": 10.0,
        "height": 10.0
      },
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "deals_damage": false
          }
        ]
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },

    "events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": ["kurokumaft:spawned_raigou" ]
				}
			},
			"kurokumaft:wait_raigou": {
				"remove": {
					"component_groups": ["kurokumaft:spawned_raigou" ]
				},
				"add": {
					"component_groups": ["kurokumaft:wait_raigou" ]
        }
			},
			"kurokumaft:fall_raigou": {
				"remove": {
					"component_groups": ["kurokumaft:wait_raigou" ]
				},
				"add": {
					"component_groups": ["kurokumaft:fall_raigou" ]
        }
			},
      "kurokumaft:despawn": {
        "run_command": {
          "command": [
            "kill @s"
          ],
          "target": "self"
        }
      }
    }
  }
}
