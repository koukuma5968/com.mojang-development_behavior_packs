{
  "format_version": "1.13.0",
  "minecraft:entity": {
    "description": {
      "identifier": "kurokumaft:sabers",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:armor_stand",
      "scripts": { "animate": [ "sabers" ] },
			"animations": { 
				"sabers": "animation.sunasuna.sabers"
			}
    },

    "components": {
      "minecraft:type_family": {
        "family": [ "inanimate"]
      },
      "minecraft:collision_box": {
        "width": 0.8,
        "height": 0.1
      },
      "minecraft:physics": {
        "has_collision": true,
        "has_gravity": true
      },
      "minecraft:timer": {
        "looping": false,
        "randomInterval": true,
        "time": [10.0,12.0],
        "time_down_event": { 
          "event": "kurokumaft:despawn"
        }
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },

    "events": {
      "kurokumaft:despawn": {
        "run_command": {
          "command": [
            "kill @s"
          ],
          "target": "self"
        }
      }
    }
  }
}