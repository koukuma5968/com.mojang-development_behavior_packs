{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.ice_magic.blockice_change": {
      "states": {
        "default": {
          "transitions": [
            { "change": "query.get_equipped_item_name == 'blockice_stick'" }
          ]
        },
        "change": {
          "on_entry": [
            "/tag @s add blockice_stick"
          ],
          "on_exit": [
            "/tag @s remove blockice_stick"
          ],
          "transitions": [
            {"default":"query.get_equipped_item_name != 'blockice_stick'"}
          ]
        }
      }
    },
    "controller.animation.ice_magic.blockice": {
      "states": {
        "default": {
          "transitions": [
            { "blockice_shock": "!query.is_sneaking && query.get_equipped_item_name == 'blockice_stick' && variable.attack_time" },
            { "jewel_bit": "query.is_sneaking && query.get_equipped_item_name == 'blockice_stick' && variable.attack_time" },
            { "stone_edge": "!query.is_sneaking && query.get_equipped_item_name == 'blockice_stick' && query.is_using_item" },
            { "gaia_crash": "query.is_sneaking && query.get_equipped_item_name == 'blockice_stick' && query.is_using_item" }
          ]
        },
        "blockice_shock": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§fアイスショック\"}]}",
            "/function magic/ice/blockice_shock"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "jewel_bit": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§fジュエルビット\"}]}",
            "/function magic/ice/jewel_bit"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "stone_edge": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§fストーンエッジ\"}]}"
          ],
          "transitions": [
            {"default":"!query.is_using_item"}
          ]
        },
        "gaia_crash": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§fガイアクラッシュ\"}]}",
            "/function magic/ice/blastbomb"
          ],
          "transitions": [
            {"default":"!query.is_using_item"}
          ]
        }
      }
    }
  }
}