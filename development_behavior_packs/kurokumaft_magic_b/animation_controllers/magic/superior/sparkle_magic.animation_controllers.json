{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.light_magic.sparkle_change": {
      "states": {
        "default": {
          "transitions": [
            { "change": "query.get_equipped_item_name == 'sparkle_stick'" }
          ]
        },
        "change": {
          "on_entry": [
            "/tag @s add sparkle_stick"
          ],
          "on_exit": [
            "/tag @s remove sparkle_stick"
          ],
          "transitions": [
            {"default":"query.get_equipped_item_name != 'sparkle_stick'"}
          ]
        }
      }
    },
    "controller.animation.light_magic.sparkle": {
      "states": {
        "default": {
          "transitions": [
            { "sparkle_shock": "!query.is_sneaking && query.get_equipped_item_name == 'sparkle_stick' && variable.attack_time" },
            { "jewel_bit": "query.is_sneaking && query.get_equipped_item_name == 'sparkle_stick' && variable.attack_time" },
            { "stone_edge": "!query.is_sneaking && query.get_equipped_item_name == 'sparkle_stick' && query.is_using_item" },
            { "gaia_crash": "query.is_sneaking && query.get_equipped_item_name == 'sparkle_stick' && query.is_using_item" }
          ]
        },
        "sparkle_shock": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§eライトニングストライク\"}]}",
            "/function magic/light/sparkle_shock"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "jewel_bit": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§eジュエルビット\"}]}",
            "/function magic/light/jewel_bit"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "stone_edge": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§eストーンエッジ\"}]}"
          ],
          "transitions": [
            {"default":"!query.is_using_item"}
          ]
        },
        "gaia_crash": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§eガイアクラッシュ\"}]}",
            "/function magic/light/blastbomb"
          ],
          "transitions": [
            {"default":"!query.is_using_item"}
          ]
        }
      }
    }
  }
}