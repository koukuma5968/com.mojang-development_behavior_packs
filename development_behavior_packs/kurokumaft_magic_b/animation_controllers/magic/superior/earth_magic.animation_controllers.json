{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.stone_magic.earth_change": {
      "states": {
        "default": {
          "transitions": [
            { "change": "query.get_equipped_item_name == 'earth_stick'" }
          ]
        },
        "change": {
          "on_entry": [
            "/tag @s add earth_stick"
          ],
          "on_exit": [
            "/tag @s remove earth_stick"
          ],
          "transitions": [
            {"default":"query.get_equipped_item_name != 'earth_stick'"}
          ]
        }
      }
    },
    "controller.animation.stone_magic.earth": {
      "states": {
        "default": {
          "transitions": [
            { "earth_shock": "!query.is_sneaking && query.get_equipped_item_name == 'earth_stick' && variable.attack_time" },
            { "jewel_bit": "query.is_sneaking && query.get_equipped_item_name == 'earth_stick' && variable.attack_time" },
            { "stone_edge": "!query.is_sneaking && query.get_equipped_item_name == 'earth_stick' && query.is_using_item" },
            { "gaia_crash": "query.is_sneaking && query.get_equipped_item_name == 'earth_stick' && query.is_using_item" }
          ]
        },
        "earth_shock": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§7アースショック\"}]}",
            "/function magic/stone/earth_shock"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "jewel_bit": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§7ジュエルビット\"}]}",
            "/function magic/stone/jewel_bit"
          ],
          "transitions": [
            {"default":"!variable.attack_time"}
          ]
        },
        "stone_edge": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§7ストーンエッジ\"}]}"
          ],
          "transitions": [
            {"default":"!query.is_using_item"}
          ]
        },
        "gaia_crash": {
          "on_entry": [
            "/titleraw @s actionbar {\"rawtext\":[{\"text\":\"§7ガイアクラッシュ\"}]}",
            "/function magic/stone/blastbomb"
          ],
          "transitions": [
            {"default":"!query.is_using_item"}
          ]
        }
      }
    }
  }
}