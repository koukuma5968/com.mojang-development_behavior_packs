{
  "format_version": "1.20.30",
  "minecraft:entity": {
    "description": {
      "identifier": "kurokumaft:water_magic_arrow",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false,
      "runtime_identifier": "minecraft:arrow"
    },

    "components": {
      "minecraft:type_family": {
        "family": [ "arrow","inanimate"]
      },
      "minecraft:collision_box": {
        "width": 0.25,
        "height": 0.25
      },
      "minecraft:projectile": {
        "on_hit": {
          "impact_damage": {
            "damage": 15,
            "knockback": false,
            "catch_fire": false,
            "semi_random_diff_damage": false,
            "destroy_on_hit": true,
            "max_critical_damage": 10,
            "min_critical_damage": 9,
            "power_multiplier": 0.97
          },
          "douse_fire": {},
          "stick_in_ground": {
            "shake_time" : 0.35
          },
          "arrow_effect": {
          },
          "remove_on_hit": {}
        },
        "filter": "minecraft:player",
        "hit_sound": "bow.hit",
        "power": 2.0,
        "gravity": 0.01,
        "inertia": 1.0,
        "liquid_inertia": 1.8,
        "uncertainty_base": 1,
        "uncertainty_multiplier": 0,
        "should_bounce": true,
        "offset": [ -0.2, 0, 0 ]
      },
      "minecraft:behavior.hurt_by_target": {
        "alert_same_type": true,
        "entity_types": {
          "filters": {
            "test": "is_family","operator": "not", "subject": "other","value": "player"
          }
        },
        "priority": 1
      },
      "minecraft:physics": {
      },
      "minecraft:timer": {
        "time": [0.01,0.01],
        "time_down_event": { 
          "event": "homing"
        }
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": true
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 80.0,
          "max_dropped_ticks": 7,
          "use_motion_prediction_hints": true
        }
      }
    },

    "events": {
      "homing": {
        "run_command": {
          "command": [
            "tp @s ^^^1 facing @e[family=!player,family=!inanimate,family=!familiar,type=!item,r=15,c=1]"
          ],
          "target": "self"
        }
      }
    }
  }
}