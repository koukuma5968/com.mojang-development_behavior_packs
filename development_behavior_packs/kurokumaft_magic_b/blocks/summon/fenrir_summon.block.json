{
	"format_version": "1.20.10",
	"minecraft:block": {
		"description": {
			"identifier": "kurokumaft:fenrir_summon",
			"is_experimental": false,
            "register_to_creative_menu": false,
			"menu_category": {
				"category": "none",
				"group": "itemGroup.name.summon_stone"
			},
			"states": {
				"kurokumaft:summon_check": [0, 1]
			}
		},
		"components": {
			"minecraft:light_emission": 5.0,
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 15.0
			},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 15.0
			},
			"minecraft:on_step_on": {
				"event": "summon_boss",
				"target": "player"
			}
		},
		"events": {
			"summon_boss": {
                "sequence": [
                    {
                        "condition": "query.block_state('kurokumaft:summon_check') == 0",
                        "run_command": {
                            "target": "self",
							"command": [
								"summon kurokumaft:fenrir ~ ~6 ~"
							]
                        },
						"set_block_state": {
							"kurokumaft:summon_check": 1
						}
                    }
                ]
            }
		}
	}
}